@model DisplayProducts


@{
    Layout = "_Layout";
}

<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="">
<meta name="author" content="">
<link rel="icon" href="../../favicon.ico">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
      rel="stylesheet" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
      crossorigin="anonymous">




<table class="table">
    <tr>
        <th scope="col"></th>
        <th scope="col">@Html.DisplayNameFor(p => p.Products[0].ID) </th>
        <th scope="col">@Html.DisplayNameFor(p => p.Products[0].SKU) </th>
        <th scope="col">@Html.DisplayNameFor(p => p.Products[0].Name) </th>
        <th scope="col">@Html.DisplayNameFor(p => p.Products[0].Price) </th>
        <th scope="col">@Html.DisplayNameFor(p => p.Products[0].Description) </th>
        <th scope="col">@Html.DisplayNameFor(p => p.Products[0].Quantity) </th>
        <th scope="col">@Html.DisplayNameFor(p => p.Products[0].ProductCategory) </th>
        <th scope="col">@Html.DisplayNameFor(p => p.Products[0].Image) </th>
        <th scope="col"></th>

    </tr>

    @foreach (Product product in Model.Products)
    {
        <tr scope="row">
            <td><a asp-action="Update" asp-controller="Product" asp-route-Id="@product.ID"> Update </a></td>
            <td>@product.ID</td>
            <td>@product.SKU</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Description</td>
            <td>@product.Quantity</td>
            <td>@product.ProductCategory</td>
            <td><img src="@product.Image" height="80" /></td>
            <td> <a asp-action="Delete" asp-controller="Product" asp-route-Id="@product.ID"> Delete Product </a> </td>
        </tr>

    }
</table>






<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
