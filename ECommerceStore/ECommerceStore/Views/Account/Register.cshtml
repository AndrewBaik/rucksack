@model RegisterViewModel

<form method="post">

    <div>
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" required />
    </div>

    <div>
        <label asp-for="FirstName"></label>
        <input type="text" asp-for="FirstName" required />
    </div>

    <div>
        <label asp-for="LastName"></label>
        <input type="text" asp-for="LastName" required />
    </div>

    <div>
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" required />
    </div>

    <div>
        <label asp-for="ConfirmPassword"></label>
        <input type="password" asp-for="ConfirmPassword" required />
    </div>

    <div>
        <label asp-for="Subscribe"></label>
        <input type="checkbox" asp-for="Subscribe" />
     </div>

    <button type="submit">Register</button>
</form>