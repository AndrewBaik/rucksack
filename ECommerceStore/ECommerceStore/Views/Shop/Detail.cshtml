@model Product

@{ 
    Layout = "_Layout";
}

<p>Category @Model.ProductCategory</p>
<img src="@Model.Image" alt="@Model.Name image" />

<h2>@Model.Name</h2>

<p>$@Model.Price</p>
<p>Product Description: @Model.Description</p>


<a asp-action="Index" asp-controller="Shop">Go back to all Products</a>