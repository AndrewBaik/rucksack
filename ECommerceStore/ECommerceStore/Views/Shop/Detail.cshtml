@model Product

@{ 
    Layout = "_Layout";
}

<div style="float:right">
    @if (SignInManager.IsSignedIn(User))
    {
        @await Component.InvokeAsync("BasketComponent", UserManager.GetUserId(User));
    }
</div>
<div>
    <p>Category @Model.ProductCategory</p>
    <img src="@Model.Image" alt="@Model.Name image" />

    <h2>@Model.Name</h2>

    <p>$@Model.Price</p>
    <p>Product Description: @Model.Description</p>
</div>




<a asp-action="Index" asp-controller="Shop">Go back to all Products</a>