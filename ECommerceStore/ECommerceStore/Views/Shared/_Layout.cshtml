<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=IM+Fell+DW+Pica|Oswald|Song+Myung" rel="stylesheet">
    <link rel="stylesheet" href="~/css/reset.css" type="text/css" />
    <link rel="stylesheet" href="~/css/base.css" type="text/css" />
    <link rel="stylesheet" href="~/css/layout.css" type="text/css" />
    <link rel="stylesheet" href="~/css/modules.css" type="text/css" />
    <link rel="stylesheet" href="~/css/icons.css" type="text/css" />
</head>


<body>
    <header>
        <img src="~/images/treeline.png" alt="Treeline Header" />
        <a asp-controller="Home" asp-action="Index">
            <span class="logo">rucksack</span>
            <span class="tagline">-buy our stuff-</span>
        </a>
        <div id="userInfo">
            @if (SignInManager.IsSignedIn(User))
            {
                <div> <strong> @User.Claims.FirstOrDefault(c => c.Type == "FullName").Value </strong> </div>

                if (User.IsInRole(ApplicationRoles.Admin))
                {
                    <a id="icon-key" asp-controller="Admin" asp-action="Index"></a>
                }
                <div><a asp-controller="Account" asp-action="Logout">logout</a></div>

                <div><a asp-controller="Shop" asp-action="CartPage">view cart</a></div>

            }
            else
            {
                <div><a asp-controller="Account" asp-action="Login">login</a></div>

                <div><a asp-controller="Account" asp-action="Register">register</a></div>
            }
        </div>

        <nav>
            <ul>
                @if (User.IsInRole(ApplicationRoles.Admin))
                {
                    <li>
                        <a asp-controller="Admin" asp-action="Index">inventory</a>
                    </li>
                }

                <li>
                    <a asp-controller="Shop" asp-action="Index">products</a>
                </li>

                @if (SignInManager.IsSignedIn(User))
                {

                    <li>
                        <a asp-controller="Account" asp-action="Logout">logout</a>
                    </li>

                    <li>
                        <a asp-controller="Shop" asp-action="CartPage">view cart</a>
                    </li>
                }
                else
                { 
                    <li>
                        <a asp-controller="Account" asp-action="Login">login</a>
                    </li>

                    <li>
                        <a asp-controller="Account" asp-action="Register">register</a>
                    </li>
                }

                <li>
                    about
                </li>

                <li>
                    subscribe
                </li>
            </ul>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <a asp-controller="Home" asp-action="Index">
            <div>
                <span class="logo">rucksack</span>
                <span class="tagline">-2018-</span>
            </div>
        </a>
        <section id="creators">
            <div>
                <span>Andrew Baik</span>
                <ul class="links">
                    <li>
                        <a href="https://www.linkedin.com/in/andrewbaik0/" target="_blank">Linkedin</a>
                    </li>
                    <li>
                        <a href="https://github.com/AndrewBaik" target="_blank">Github</a>
                    </li>
                </ul>
            </div>
            <div>
                <span>Nathan Aurich</span>
                <ul class="links">
                    <li>
                        <a href="https://www.linkedin.com/in/nathan-aurich/" target="_blank">Linkedin</a>
                    </li>
                    <li>
                        <a href="https://github.com/NateA275" target="_blank">Github</a>
                    </li>
                </ul>
            </div>
        </section>
        <section id="providers">
            <div class="icon-Microsoft"></div>
            <div class="icon-Google"></div>
        </section>
        <section id="smallprint">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">home</a></li>
                <li>subscribe</li>
                <li>about</li>
                <li>&copy; 2018</li>
                <li>All Rights Reserved.</li>
            </ul>
        </section>
    </footer>

</body>
</html>
